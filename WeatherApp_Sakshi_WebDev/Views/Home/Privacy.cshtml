@{
    ViewData["Title"] = "Privacy Policy";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f2f2f2;
            font-family: Arial, sans-serif;
        }

        .jumbotron {
            background-color: #007BFF;
            color: white;
            padding: 30px;
        }

        .container {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
            margin-top: 20px;
        }

        footer {
            background-color: #333;
            color: white;
            padding: 10px 0;
            text-align: center;
        }
    </style>
</head>
<body>
    <header class="jumbotron text-center">
        <h1 class="display-4">@ViewData["Title"]</h1>
    </header>

    <main class="container">
        <h2>Privacy Policy</h2>
        <p>
            Currently, the only data saved is user email and login information.
            We take your privacy seriously and ensure that your data is handled securely and used only for authentication purposes.
            We do not share your personal information with third parties.
        </p>
    </main>

    <footer class="text-center py-3">
        <p>&copy; 2023 Weather App | Author: Sakshi (A00262877)</p>
    </footer>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
